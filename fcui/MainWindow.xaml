<Window x:Class="fcui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="366" Width="1023" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*" MinHeight="45"/>
            <RowDefinition Height="45*" MinHeight="45"/>
            <RowDefinition Height="45*" MinHeight="45"/>
            <RowDefinition Height="204*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="116"/>
        </Grid.ColumnDefinitions>
        <ListView Margin="10,10,10,21" Grid.RowSpan="3">
            <ListView.View>
                <GridView AllowsColumnReorder="False"/>
            </ListView.View>
        </ListView>
        <Button x:Name="btn_AddRule" Content="Add rule..." Grid.Column="1" Margin="10" Click="btn_AddRule_Click"/>
        <Button x:Name="btn_DeleteRule" Content="Delete rule..." Grid.Column="1" Margin="10" Grid.Row="1"/>

    </Grid>
</Window>
